{
  "name": "@myorg/ui",
  "version": "1.0.0",
  "description": "Component library with tree-shakeable exports",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./button": {
      "import": "./dist/button.js",
      "types": "./dist/button.d.ts"
    },
    "./table": {
      "import": "./dist/table.js",
      "types": "./dist/table.d.ts"
    },
    "./input": {
      "import": "./dist/input.js",
      "types": "./dist/input.d.ts"
    },
    "./card": {
      "import": "./dist/card.js",
      "types": "./dist/card.d.ts"
    },
    "./chart": {
      "import": "./dist/chart.js",
      "types": "./dist/chart.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "clean": "rimraf dist"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@vitejs/plugin-react": "^4.2.1",
    "react": "^18.2.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-dts": "^3.7.0"
  },
  "dependencies": {
    "chart.js": "^4.5.1"
  }
}
